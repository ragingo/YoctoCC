{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yoctocc",
            "args": [
                "${input:sourceFile}",
                "${input:outputFile}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "逆アセンブリ フレーバーを Intel に設定",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "ブレークポイントの検証を有効にする",
                    "text": "set breakpoint pending on",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Compiler (test1.txt)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/yoctocc",
            "args": [
                "test/test1.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "逆アセンブリ フレーバーを Intel に設定",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with Make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Generated Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/program",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "gdb の再フォーマットを有効にする",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "逆アセンブリ フレーバーを Intel に設定",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ],
    "inputs": [
        {
            "id": "sourceFile",
            "type": "promptString",
            "description": "入力ソースファイル",
            "default": "test/test1.txt"
        },
        {
            "id": "outputFile",
            "type": "promptString",
            "description": "出力アセンブリファイル",
            "default": "build/program.s"
        }
    ]
}